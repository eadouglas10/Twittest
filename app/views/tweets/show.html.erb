<main>
  <h2><%= @user.name %></h2>
  <h3><%= @tweets.length %> tweets</h3>

  <%= form_for @tweet, url: tweet_path do |f| %>
    <%= f.text_area :body %>
    <%= f.hidden_field :user_id, value: @user.id %>
    <%= f.submit "Tweet" %>

  <% end %>

  <% @tweets.each do |tweet| %>
  <p>
      <%= tweet.body %>
  </p>
  <% end %>

</main>
